@page "/subjectcreate/{CollegeId:int}"

<EditForm Model="subjectDTO" OnSubmit="HandleSubmit">
    <label for="Name">Name</label>
    <InputText @bind-Value="@subjectDTO.Name" class="form-control"></InputText>
    <label for="TotalGrade">TotalGrade</label>
    <InputNumber @bind-Value="@subjectDTO.TotalGrade" class="form-control"></InputNumber>
    <label for="Doctor">Choose Doctor</label>
    <InputSelect id="Doctor" @bind-Value="@subjectDTO.DoctorId" class="form-control">
        <option disabled selected value> -- select an option -- </option>
        @foreach (Doctor doctor in doctors)
        {
            <option value="@doctor.Id">@doctor.FName @doctor.LName </option>

        }

    </InputSelect>
    <button type="submit" class="mt-3 btn btn-primary">Create Subject</button>
</EditForm>