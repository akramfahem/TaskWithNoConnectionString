@page "/studentdetails/{id:int}"
<h1>@student.FName @student.LName</h1>
@if (student.College is not null)
{<h2>@student.College.Name</h2>}

@if (student.Subjects is not null)
{
    <div class="container">
        <h1 class="text-center mb-5">Subjects He is Learning This Semester</h1>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>TotalGrade</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Subject in student.Subjects)
                    {
                        <tr>
                            <td>@Subject.Id</td>
                            <td>@Subject.Name</td>
                            <td>@Subject.TotalGrade</td>
                            <td><a @onclick="() => DeleteSubject(Subject.Id,student.Id)"></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
<a href="@($"/enrollmentcreate/{student.Id}")" class="mt-3 btn btn-primary">Enroll in Course</a>
