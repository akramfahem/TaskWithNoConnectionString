@page "/studentedit/{id:int}"
@page "/studentcreate/{CollegeId:int}"
@inject IStringLocalizer<StudentEdit> Localizer
@if (CurrentStudent != null)
{
    @if (!Saved)
    {

        <button class="btn btn-primary" @onclick="ConfigureCulture">@Localizer["Switch"]</button>
        <div class="container d-flex">
            <EditForm Model="CurrentStudent" OnSubmit="HandleSubmit">
                <DataAnnotationsValidator />
                <label for="FirstName">@Localizer["FName"]</label>
                <InputText id="FirstName" @bind-Value="CurrentStudent.FName" class="form-control"></InputText>
                <label for="LastName">@Localizer["LName"]</label>
                <InputText id="LastName" @bind-Value="CurrentStudent.LName" class="form-control"></InputText>
                <label for="Age">@Localizer["age"]</label>
                <InputNumber id="Age" @bind-Value="CurrentStudent.Age" class="form-control"></InputNumber>
                <label for="Email">@Localizer["email"]</label>
                <InputText id="Email" @bind-Value="CurrentStudent.Email" class="form-control"></InputText>
                <label for="MobileNumber">@Localizer["phone"]</label>
                <InputText id="MobileNumber" @bind-Value="CurrentStudent.PhoneNumber" class="form-control"></InputText>
                <label for="level">level</label>
                <InputNumber id="level" @bind-Value="CurrentStudent.level" class="form-control"></InputNumber>
                <label for="semester">semester</label>
                <InputNumber id="semester" @bind-Value="CurrentStudent.Semester" class="form-control"></InputNumber>
                <ValidationSummary />
                <button type="submit" class="btn btn-primary">@((isNew ? Localizer["create"] : Localizer["update"]))</button>
            </EditForm>
        </div>
    }
    else
    {
        <div>
            <a class=@($"{IsDone}")>@((Saved ? Localizer[$"{status}"] : Localizer["Deleted"] ))</a>
        </div>
    }
}
else
{
    <div class="d-flex spinner-border text-danger justify-content-center align-content-center" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
}





